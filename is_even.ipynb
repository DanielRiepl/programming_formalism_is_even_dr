    "def is_even(x):\n",
    "    if not isinstance(x, int):\n",
    "        raise TypeError(\"Please input an integer\")\n",
    "    else:\n",
    "        return (x % 2 == 0)\n",
    "\n",
    "\n",
    "is_even(2)"
